<div class="container well margin-top-20 small-container">
	<div>
		<a href="/Students"><< Go Back</a>
	</div>
    <%= form_for(@student, method: "PUT") do |f| %>
	
	<div class="bold margin-top-20">
		Name
	</div>
	<div class="margin-top-20">
		<%= f.text_field :name %>
	</div>
	<div class="bold margin-top-20">
		Email
	</div>
	<div class="margin-top-20">
		<%= f.text_field :email %>
	</div>
	<div class="bold margin-top-20">
		Age
	</div>
	<div class="margin-top-20">
		<%= f.text_field :age %>

	<div class="margin-top-20">
		<a href="/books" class="btn btn-default">Cancel</a>
		<button type="submit" class="btn btn-success">Submit Edits</button>
	</div>
	<% end %>
	
	<%= form_tag(student_path(@student.id), method: "DELETE") do %>
	<div class="margin-top-20">
	    <button type="submit" class="btn btn-danger">Delete Student</button>
	<% end %>    
	</div>
</div>




