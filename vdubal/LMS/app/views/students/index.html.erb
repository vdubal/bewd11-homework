<div class="container">
	<h1>Students</h1>

<div class="container">

	<div class="margin-top-20">
	<% if flash[:error] %>
	    <div class="alert alert-danger">
	        <%= flash[:error] %> 
	   </div>    
	   <% end %>


	<div>
	    	<a href="<%= new_student_path %>" class="btn btn-primary">New Student</a>
	    	<a href="<%= new_course_path %>" class="btn btn-primary">Add Course</a>
	</div>
</div>

<div class="container margin-top-20">
	<table class="table striped">
		<thead>
			<th>Students</th>
			<th></th>
		</thead>

		<tbody>
		    <% @students.each do |student| %> 
			<tr>
				<td>
					<%= student.name %>
				</td>
				<td>
					<a href="/students/<%= student.id %>/edit" class="btn btn-primary">Edit</a>
					<a href="/students/<%= student.id %>/enrollments" class="btn btn-primary">Enroll</a>
				</td>
			</tr>
			<% end %> 
		</tbody>
	</table>
</div>

